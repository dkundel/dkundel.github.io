mixin resumeEntry(institute, website, time, title)
  .row.institutional-entry
    .col-xs-12.col-lg-3
      p.institute
        a(href=website, target='_blank')= institute
      p.timeframe= time
    .col-xs-12.col-lg-9
      p.occupation= title
      block
      
mixin educationEntry(value)
  +resumeEntry(value.institution, value.website || '', value.startDate+' to '+value.endDate, value.studyType + ' in ' + value.area)
    p Graduated with a GPA of&nbsp;
      = value.gpa
      | &nbsp;
      a(href='https://en.wikipedia.org/wiki/Academic_grading_in_Germany') (German Scale)
    span.subheading Courses:
    ul.fa-ul
      each course in value.courses
        li
          i.fa-li.fa.fa-angle-right
          = course
      
mixin workEntry(value)
  +resumeEntry(value.company, value.website, value.startDate+' to '+value.endDate, value.position)
    p= value.summary
    span.subheading Highlights:
    ul.fa-ul
      each highlight in value.highlights
        li
          i.fa-li.fa.fa-angle-right
          = highlight
        
mixin volunteerEntry(value)
  +resumeEntry(value.organization, value.website, value.startDate+' to '+value.endDate, value.position)
    p= value.summary
    span.subheading Highlights:
    ul.fa-ul
      each highlight in value.highlights
        li
          i.fa-li.fa.fa-angle-right
          = highlight

mixin skillEntry(value)
  .skill-entry.col-xs-12.col-md-6
    strong= value.name
    ul.fa-ul
      each keyword in value.keywords
        li
          i.fa-li.fa.fa-angle-right
          = keyword
      
mixin languageEntry(value)
  p.language-entry
    strong= value.language
    |: &nbsp;
    = value.fluency

